@page
@model EmployeeManagement.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Список відділів";
}
<h2>@ViewData["Title"]</h2>

<a asp-page="Create" class="btn btn-outline-primary me-2">➕ Додати новий відділ</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model.Departments)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.Description</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-warning">✏️ Редагувати</a>
                    <a asp-page="Delete" asp-route-id="@dept.Id" class="btn btn-sm btn-danger">🗑️ Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>